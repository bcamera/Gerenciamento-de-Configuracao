    #include <stdio.h>
     
    int main(void)
    {
            float num1,
                  num2,
                  result;
     
            char oper;
     
                printf("\t\tCalculadora \n\n");
     
                printf("Operacoes disponiveis\n");
                printf("'+' : soma\n");
                printf("'-' : subtracao\n");
                printf("'*' : multiplicao\n");
                printf("'/' : divisao\n");
                printf("'%%' : resto da divisao\n");
     
                printf("\nDigite a expressao na forma: numero1 operador numero2\n");
                printf("Exemplos: 1 + 1 ,  2.1 * 3.1\n");
     
                printf("Para sair digite: 0 0 0\n");
     
                scanf("%f", &num1);
                scanf(" %c",&oper);
                scanf("%f", &num2);
            if(oper == "+"){
                    result = (num1 + num2);
            }
            if(oper == "-"){
                    result = (num1 - num2);
            }
            if(oper == "*"){
                    result = (num1 * num2);
            }
            if(oper == "/"){
                    result = (num1 / num2);
            }
     
            system("cls || clear");
     
            printf("Calculando: %.2f %c %.2f %.2f = ", num1,oper,num2, result);
    }
